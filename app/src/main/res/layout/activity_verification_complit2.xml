<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC8585"
    android:orientation="vertical"
    tools:context=".VerificationComplit">


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/log_outBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="180"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_arrow_forward_24"
            app:tint="@color/new1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="end"
            android:layout_toLeftOf="@id/google_img"
            android:orientation="vertical"
            android:paddingEnd="6dp"
            tools:ignore="RelativeOverlap,RtlSymmetry">

            <TextView
                android:id="@+id/userResendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new1"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/google_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/newcolor"
                android:textSize="14sp" />

        </LinearLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/google_img"
            android:layout_width="45dp"
            android:layout_gravity="end"
            android:layout_height="45dp"
            android:background="@color/black"
            android:layout_alignParentEnd="true"
            app:shapeAppearance="@style/corner50"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:src="@drawable/verification"/>



</RelativeLayout>